@model IEnumerable<DailyBlogger.Models.BlogPost>
    
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Blog Posts</title>
</head>
<body>
    <p>
    </p>

    @foreach (var item in Model)
    {
        {
            <div class="w3-container w3-center w3-padding-32">

                <!-- Blog entries -->
                <div class="w3-col l8 s12">
                    <!-- Blog entry -->
                    <div class="w3-card-4 w3-margin w3-white">
                        <div class="w3-container">
                            <h3><a asp-controller="Blog" asp-action="Details" asp-route-id=@item.id> @Html.DisplayFor(m => item.blogTitle) </a></h3>
                            <p>@Html.DisplayFor(m => item.blogDate) </p>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div>
            <a asp-action="New">Add a New Post</a>
        </div>
    }


</body>
</html>
